<section id="add-entry-form" >
  <form action="/add_entry" method="post"
    onSubmit="return confirm('Are you sure you want to add an entry?');">
    <fieldset>
      <h1>Enter Address Details</h1>
      <label>
        Name:
        <input type="text" name="name" placeholder="RR 3 Box 14 - Simpson" required />
      </label>
      <label>
        Area:
        <input type="text" name="area" placeholder="Dallas" required />
      </label>
      <label>
        Route Number:
        <input type="text" name="route_num" placeholder="3" />
      </label>
      <label>
        Route Box:
        <input type="text" name="route_box" placeholder="44"/>
      </label>
      <label>
        Coordinates:
        <input type="text" name="lat" required placeholder="32.77911908614115" required />
        <input type="text" name="long" required placeholder="-96.79900219415437" required />
      </label>
      <label>
        Notes:
        <textarea 
          name="notes" rows=8 cols=30 placeholder = "Enter any additional notes about the address here" >
        </textarea>
      </label>

      <input type="Submit" value="Submit" />

    </fieldset>
  </form>
</section>